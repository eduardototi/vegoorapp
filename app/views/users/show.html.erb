<div class = "container mt-4">
  <div class = "mb-3">
    <%= link_to("Voltar", :back, {:class => "h5 text-white"}) %>
  </div>

  <%= react_component("ListaVisualizacao",
                      props: {"cabecalho": ["Id", "Nome", "Matrícula", "E-mail", "Telefone", "Função", "Administrador"],
                              "colunas": ["id", "first_name { } last_name", "registration", "email", "phone", "role", "admin"],
                              "linkAcoes": "users",
                              "data": @user.as_json},
                      prerender: false) %>

  <%= react_component("ListaVisualizacaoSemAcoes",
                      props: {"cabecalho": ["Empresa", "Telefone", "E-mail"],
                              "colunas": ["razao_social", "phone", "email"],
                              "data": @user.client.as_json},
                      prerender: false) %>
</div>

