<div class="container">
  <div class="container-form">
  <%= simple_form_for(staff) do |f| %>
    <div class="product-new text-center">Cadastre de Clientes:</div>
    <div class="form-inputs">
      <%= f.input :first_name, label: "Nome" %>
      <%= f.input :last_name, label: "Sobrenome" %>
      <%= f.input :email, label: "Email" %>
      <%= f.input :phone, label: "Telefone" %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Enviar" %>
    </div>
  <% end %>
  </div>
</div>
