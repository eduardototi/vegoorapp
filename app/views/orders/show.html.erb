<div class="container">
  <%= @order.id %>
  <%= @order.client.razao_social %>
  <% @order.services.each do |service| %>
    <%= service.title %> -
    <%= service.description %> -
  <% end %>
  <%= link_to 'Editar', edit_order_path, class: 'btn btn-primary' %>
  <%= link_to "Excluir", @order, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este cliente?' }, class: 'btn btn-info' %>
</div>
