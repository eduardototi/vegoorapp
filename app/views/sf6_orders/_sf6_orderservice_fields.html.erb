<div class='nested-fields mt-1'>
  <h6>Escolha o serviço:</h6>
  <%= f.select :service_id, Service.all.map { |service| ["#{service.title} | #{service.description}", service.id] }, include_blank: true, required: true, class: 'seletor' %>
  <%= f.label "Finalizado" %>
  <%= f.check_box :status %>
  <%= f.select :machine_id, Machine.all.map { |machine| [ machine.name, machine.id]}, label: 'Maquina' %>
  <%= f.input :machineserie, label: 'Numero de série' %>
  <%= link_to_remove_association "Remover", f, class: 'btn btn-danger d-block mb-2' %>
</div>
