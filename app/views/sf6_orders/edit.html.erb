<div class="container">
  <div class="container-form">
    <div class="order-number">
      Ordem de Serviço número: <%= @sf6_order.id %>
    </div>
    <div class="order-date">
      Data: <%= Date.today.strftime("%d/%m/%Y") %>
    </div>
    <%= simple_form_for(@sf6_order) do |f| %>
      <div class="product-new text-center">
        Editar Ordem de Serviço:
      </div>
      <div class="form-inputs">
        <div class="factory">
          <%= f.label "Situação" %>
          <%= f.check_box :status, data: { confirm: 'Tem certeza que deseja deletar esta ordem de serviço?' } %>
        </div>
         <div class="new">
          <p>
            <%= f.check_box :field %>
            <%= f.label "Serviço de Campo" %>
          </p>
          <p>
            <%= f.check_box :laboratory %>
            <%= f.label "Serviço de Laboratório" %>
          </p>
           <p>
            <%= f.check_box :factory %>
            <%= f.label "Serviço de Oficina" %>
          </p>
        </div>
        <%= f.input :description, label: "Descrição" %>
        <%= f.input :user_id, collection: User.where(role: "Técnico").map { |user| ["#{user.first_name} #{user.last_name}", user.id ] }, label: "Responsável Técnico:" %>        <%= f.input :client_id, collection: Client.all.map { |client| [client.razao_social, client.id ] }, label: "Cliente:" %>
        <%= f.input :contact_id, collection: User.where(role: 'Cliente').map { |user| ["#{user.first_name} #{user.last_name}", user.id ]}, label: "Contato Cliente:" %>
        <%= f.input :service_location, label: "Local de execução" %>


        <%= f.simple_fields_for :sf6_orderservices do |service| %>
          <%= render 'sf6_orderservice_fields', :f => service %>
        <% end %>

        <div class='links-div'>
          <%= link_to_add_association 'Adicionar Serviço', f, :sf6_orderservices, class: 'btn btn-primary my-3 d-block' %>
        </div>

        <%= f.input :comments, label: "Observações" %>

        <%= f.simple_fields_for :sf6_orderutensils do |utensil| %>
          <%= render 'sf6_orderutensil_fields', :f => utensil %>
        <% end %>

        <div class='links-div'>
          <%= link_to_add_association 'Adicionar Equipamento', f, :sf6_orderutensils, class: 'btn btn-primary my-3 d-block' %>
        </div>

        <%= f.simple_fields_for :epi_sf6orders do |epi| %>
          <%= render 'epi_sf6order_fields', :f => epi %>
        <% end %>

        <div class='links-div'>
          <%= link_to_add_association 'Selecionar Epis', f, :epi_sf6orders, class: 'btn btn-primary my-3 d-block' %>
        </div>

      </div>

      <div class="form-actions text-center">
        <%= link_to 'Voltar', :back, class: 'btn btn-primary' %>
        <%= f.button :submit, "Salvar", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
