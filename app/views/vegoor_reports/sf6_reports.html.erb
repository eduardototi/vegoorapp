<div class="container mt-4">
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th scope="col">Laudo</th>
        <th scope="col">Empresa</th>
        <th scope="col">Cliente</th>
        <th scope="col">Situação</th>
        <th scope="col">Visualizar</th>
      </tr>
    </thead>
    <tbody>
      <% @vegoor_reports.each do |report| %>
        <tr>
          <th scope="row"><%= set_report_company(report)[0] %></th>
          <th scope="row"><%= set_report_company(report)[1] %></th>
          <td><%= report.order.client.razao_social %></td>
          <td><%= report.status ? 'Final' : 'Preliminar' %></td>
          <td><%= link_to 'Visualizar', vegoor_report_path(report) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
