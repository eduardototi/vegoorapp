<div class="container">
  <div class="container-form">
    <%= simple_form_for(@service_report) do |f| %>
      <h3 class="text-center">Resultado de Servi√ßo</h3>
      <div class="form-inputs">
        <%= f.input :parameter, label: "Parametro" %>
        <%= f.input :unity, label: "Unidade" %>
        <%= f.input :fase_a, label: "Fase A" %>
        <%= f.input :fase_b, label: "Fase B" %>
        <%= f.input :fase_c, label: "Fase C" %>
        <%= f.input :reference, label: "Referencia" %>
        <%= f.hidden_field :sf6_orderservice_id %>
        <% if @service_report.photos.attached? %>
          <% @service_report.photos.each do |photo| %>
            <%= image_tag photo, height: 300, width: 400, crop: :fill %>
          <% end %>
        <% end %>
        <%= f.input :photos, as: :file, input_html: { multiple: true, id: 'photo-input' } %>
      </div>
      <div class="form-actions text-center">
        <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>