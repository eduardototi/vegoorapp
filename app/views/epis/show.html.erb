<div class="container mt-4">
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Epi</th>
        <th scope="col">Editar</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <th scope="row"><%= @epi.id %></th>
          <td><%= @epi.name %></td>
          <td><%= link_to 'Editar', edit_epi_path(@epi) %></td>
          <td><%= link_to "Excluir", @epi, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este cliente?' }, class: 'btn btn-danger' %></td>
        </tr>
    </tbody>
  </table>
</div>
