<div class="container mt-4">
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Equipmanto</th>
        <th scope="col">Status</th>
        <th scope="col">Editar</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <th scope="row"><%= @utensil.id %></th>
          <td><%= @utensil.name %></td>
          <td><%= @utensil.status %></td>
          <td><%= link_to 'Editar', edit_utensil_path(@utensil) %></td>
          <td><%= link_to "Excluir", @utensil, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este cliente?' }, class: 'btn btn-danger' %></td>
        </tr>
    </tbody>
  </table>
</div>
