<div class="container">
  <div class="container-form">
    <%= simple_form_for(utensil) do |f| %>
      <h3 class="text-center">Cadastro de Equipamentos</h3>
      <div class="form-inputs">
        <%= f.input :name, label: "Nome" %>
        <%= f.input :status, as: :radio_buttons, label: 'Ativo' %>
      </div>
      <div class="form-actions text-center">
        <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
