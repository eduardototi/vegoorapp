<div class="container">
  <div class="container-form">
  <%= simple_form_for(utensil) do |f| %>
    <div class="product-new text-center">Cadastro de Equipamentos:</div>
    <div class="form-inputs">
      <%= f.input :name, label: "Nome" %>
      <%= f.input :status, as: :radio_buttons, label: 'Ativo' %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Enviar" %>
    </div>
  <% end %>
  </div>
  <%= link_to 'Voltar', :back, class: 'btn btn-primary' %>
</div>
